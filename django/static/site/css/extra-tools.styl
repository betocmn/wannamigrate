.content
    &.extra-tools
        width 965px
        margin 0 auto 58px
        padding 58px 0 0 0
        overflow hidden

        .title
            display block
            padding 0 0 50px
            text-transform uppercase
            font-size 20px
            fontbd()
            font-weight normal
            color #68347e

        .tools
            width 1000px

        .tool
            position relative
            float left
            size 460px 200px
            padding 40px 40px 0 145px
            margin 0 40px 40px 0
            box()
            border 1px solid #ebebeb
            background-color #f9f9f9

            &:before
                content ''
                position absolute
                left 0
                top 0
                size 120px 200px
                replace ('tool-imigration-calculator.jpg')

            &.find-jobs
                &:before
                    bg ('tool-find-jobs.jpg')

            &.genius
                &:before
                    bg ('tool-genius.jpg')

            &.ebooks
                &:before
                    bg ('tool-ebooks.jpg')

            &.unavailable
                &:after
                    content ''
                    position absolute
                    right -5px
                    top -6px
                    size 124px 76px
                    replace ('tool-comming.png')

                .title-tool
                    color #cacaca

                .text
                    color #cacaca

            a
                text-decoration none

            .title-tool
                display block
                font-size 18px
                fontbd()
                font-weight normal
                color #68347e

            .text
                display block
                padding 20px 0 0
                line-height 22px
                font-size 14px
                color #888
