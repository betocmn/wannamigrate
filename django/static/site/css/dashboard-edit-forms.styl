                            .bt-add
                                display block
                                size 118px 24px
                                line-height 24px
                                border 1px solid #707070
                                text-align center
                                text-transform uppercase
                                text-decoration none
                                fontsb()
                                font-size 10px
                                color #fdfdfd
                                background-color #878787

                        &.occupation-field
                            height 140px

                            .occupation
                                margin 0 0 10px

                            strong
                                display block
                                padding 0 0 5px
                                line-height 22px
                                font-weight normal
                                font-size 14px
                                color #888

                            label
                                display none

                            select
                                width 345px

                        &.works-field
                            height auto
                            padding 0 0 20px

                            strong
                                display block
                                padding 0 0 5px
                                line-height 22px
                                font-weight normal
                                font-size 14px
                                color #888

                            .works
                                clear left
                                display block
                                size 465px auto
                                padding 16px 0 0
                                box()
                                bg('form-country-border.png')

                                .work
                                    position relative
                                    display block
                                    size 465px 160px
                                    padding 14px 0 15px 20px
                                    box()
                                    background-color #f9f9f9

                                    .experience
                                        float left
                                        width 195px
                                        margin 0 15px 10px 0

                                        input
                                            line-height 40px

                                    label
                                        display block
                                        padding 0 0 5px

                                    input
                                        height 42px
                                        font-size 16px
