                            .bt-add
                                display block
                                size 118px 24px
                                line-height 24px
                                border 1px solid #707070
                                text-align center
                                text-transform uppercase
                                text-decoration none
                                fontsb()
                                font-size 10px
                                color #fdfdfd
                                background-color #878787

                        &.married
                            height 100px
                            label
                                display block
                                line-height 22px

                            select
                                width 170px

                        &.educational-field
                            height auto
                            padding 0 0 20px

                            strong
                                line-height 22px
                                font-size 14px
                                color #888

                            .educationals
                                clear left
                                display block
                                size 465px auto
                                padding 16px 0 0
                                box()
                                bg('form-country-border.png')

                                .education
                                    position relative
                                    display block
                                    size 465px auto
                                    padding 14px 0 15px 20px
                                    box()
                                    background-color #f9f9f9

                                    .education-which
                                        float left
                                        display block
                                        width 170px
                                        margin 0 15px 0

                                    .field.level
