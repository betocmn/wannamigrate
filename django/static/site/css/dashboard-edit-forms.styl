                                background-color #878787

                        &.hinterland,
                        &.commom
                            span
                                display block
                                line-height 22px
                                font-size 14px
                                color #888

                            .option
                                float left
                                width 80px
                                height 42px
                                line-height 42px

                                &.yes
                                    padding-right 15px

                         &.commom
                             clear left

                    label
                        padding 0 0 5px 10px
                        font-size 14px
                        color #888

                    input[type="checkbox"],
                    input[type="radio"]
                        display block
                        float left
                        width auto


                    input[type="text"]
                        width 100%

            .education-form
                .married
                    label
                        padding-left 0

    footer
        position fixed
        bottom 0
        padding 0
        background-color #252525

        .options-list
            size 405px 70px
            margin 0 auto

            .option-item
                position relative
                float left
                display block
                size auto 70px
                line-height 70px
                padding 0 20px

                &:after
                    content ''
                    position absolute
                    right 0
                    top 27px
                    square 15px
                    border-top 2px solid #565656
                    border-right 2px solid #565656
                    transform rotate(45deg)

                &:last-child
                    &:after
                        display none

                .option-link
                    font-size 12px
                    fontbd()
                    font-weight normal
                    text-transform uppercase
                    text-decoration none
                    color #888

                    &:hover
                        fontbd()
                        font-weight normal
                        color #fccc00

        .bt
            position absolute
            top 0
            display block
            size 149px 70px
            line-height 70px
            fontbd()
            font-weight normal
            font-size 14px
            text-decoration none
            text-transform uppercase
            text-align center
            color #fff
            background-color #363636

            &:hover
                background-color #fccc00

            &.bt-previous
                left 0
                border-right 1px solid #494949

            &.bt-next
                right 0
                border-left 1px solid #494949
