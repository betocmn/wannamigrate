.contactus
    fontrg()
    color #fffefc
    background-color #000

    .background
        position fixed
        width 100%
        height 100%
        z-index -1

    .button
        button()

    .content
        .contact-us
            position absolute
            left 50%
            top 50%
            size 960px 250px
            margin-left -480px
            margin-top -125px

            .title
                display block
                padding 0 0 65px 0
                text-align center
                fontbd()
                font-weight normal
                font-size 60px

            .description
                display block
                width 80%
                margin 0 auto 20px
                line-height 32px
                text-align center
                fontbd()
                font-weight normal
                font-size 22px
                color #fff

                span
                    fontbd()
                    color #ffce00

            form
                padding 0 0 50px 0
                overflow hidden

                fieldset
                    width 70%
                    margin 0 auto

                    legend
                        display block
                        line-height 20px
                        padding 0 0 45px
                        font-size 16px
                        text-align center

                    .field
                        size 70% 80px
                        margin 0 auto

                        &.message
                            height auto

                        label
                            display block
                            font-size 14px
                            padding 0 0 5px 10px

                        input
                            width 100%
                            font-size 14px

                        textarea
                            width 100%
                            padding 10px
                            font-size 14px
                            box()
                            resize none
                            border-color transparent
                            border-radius(4px)

                        .bt-send
                            width 100%
                            margin 10px 0 0

    footer
        display none
