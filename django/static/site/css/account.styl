.content
    &.myaccount
        width 960px
        margin 0 auto 58px
        padding 58px 0 0 0
        overflow hidden

        .title
            display block
            padding 0 0 50px
            text-transform uppercase
            font-size 20px
            fontbd()
            font-weight normal
            color #68347e

        .interactions
            position relative
            clear both
            size 99% auto
            padding-bottom 50px
            margin-top 30px
            background-color #fafafa
            border 1px solid #d7d7d7

            .interaction-list
                position relative
                left -1px
                top -37px
                size 960px 35px
                margin 0 auto

                .interaction-item
                    float left
                    display block
                    width 138px
                    margin 0 2px 0
                    text-align center

                    &:first-child
                        margin-left 0

                    .interaction-link
                        display block
                        height 35px
                        line-height 35px
                        text-decoration none
                        border-left 1px solid #d7d7d7
                        border-top 1px solid #d7d7d7
                        border-right 1px solid #d7d7d7
                        border-radius 5px 5px 0 0
                        font-size 14px
                        background-color #eaeaea
                        color #888

                        &.active
                            position relative
                            background-color #fafafa
                            border-bottom 1px solid #fafafa
                            color #68347e
                            pointer-events none

            .my-profile
                padding 0 25px

                .bt-edit
                    float right
                    width 170px

                .identity
                    clear left
                    size 100% 150px
                    padding 45px 0 0
                    // box()
                    overflow hidden

                    .thumb
                        float left
                        square 125px

                        span
                            display block
                            // clear both
                            padding 0 0 10px
                            font-size 14px
                            color #888
                            overflow hidden

                        img
                            display block
                            square 100px

                    .data
                        padding 22px 0 0

                        span
                            display block
                            padding 0 0 7px
                            font-size 14px
                            color #888

                        strong
                            display block
                            padding 0 0 20px
                            font-weight normal
                            fontsb()
                            font-size 16px
                            color #555

                .summary
                    size 100% 150px
                    font-size 14px
                    color #555

                    span
                        display block
                        padding 0 0 10px
                        font-size 14px
                        color #888

                    .text
                        display block
                        width 800px
                        line-height 22px
                        fontsb()
                        padding 0 0 0 20px

                .services
                    padding 0 0 0 0

                    .title
                        padding-bottom 20px

                    .subtitle
                        margin-left -20px

                    span
                        display block
                        padding 0 0 15px

                    .supported-countries
                        padding 0 0 0 0

                        p
                            display inline-block
                            height 30px
                            line-height 30px
                            padding 0 10px 0 20px
                            fontbd()
                            font-size 16px
                            font-size 16px
                            color #777

                            &:last-child
                                padding 0 0 0 20px
                                border-left 1px solid #e1e1e1

                    .supported-services
                        margin 30px 0 5px

                        ul
                            padding 0 0 0 20px

                            li
                                display block
                                size 445px 50px
                                line-height 50px
                                fontbd()
                                font-size 16px
                                border-top 1px solid #e1e1e1

                                &:last-child
                                    border-bottom 1px solid #e1e1e1

                                strong
                                    float left
                                    display inline-block
                                    font-weight normal
                                    color #777

                                span
                                    float right
                                    display inline-block
                                    padding-bottom 0
                                    color #555
