.landing
    fontrg()
    color #fffefc
    background-color #000

    .background
        position fixed
        width 100%
        height 100%
        z-index -1

    .button
        button()

    header
        size 100% 120px
        padding 50px 5%
        box()

        .logo
            float left
            size 301px 44px
            replace('logo-wannamigrate.png')

        .bt-nav
            display none

        nav
            float right
            width 540px

            li
                float left
                display block
                padding 0 0 0 8%
                box()

                .nav-link
                    display block
                    text-transform uppercase
                    text-decoration none
                    font-size 16px
                    color #fffefc

                    &:hover
                        text-decoration underline

                    &.bt-login
                        padding-left 25px
                        padding-right 25px
                        text-decoration none
                        margin-top -12px
                        text-transform capitalize

    .content
        .get-help
            position absolute
            left 50%
            top 50%
            size 960px 250px
            margin-left -480px
            margin-top -125px

            .title
                display block
                padding 0 0 65px 0
                text-align center
                fontrg()
                font-size 58px
                text-shadow: 1px 1px 4px #000

                strong
                    fonteb()
                    font-style normal

            form
                size auto 120px
                padding 20px 25px
                box()
                background-color rgba(0,0,0,0.5)

                fieldset
                    float left

                .field
                    float left
                    height 45px

                    label
                        display block
                        fontrg()
                        font-size 16px
                        padding 0 0 10px 10px
                        color #fff

                    select
                        height 45px

                .from

                    select
                        width 220px

                .want
                    margin 0 20px

                    select
                        width 258px

                .to
                    select
                        width 220px

                .bt-help
                    float right
                    width 150px
                    margin 25px 0 0 0
                    padding-top 11px

    footer
        clear both
        position fixed
        bottom 0
        size 100% 125px
        box-shadow inset 0px -110px 90px -85px rgba(0,0,0,1)

        .nav-footer
            display block
            size 400px 20px
            max-width 960px
            margin 75px auto 0

            li
                float left
                padding 0 14px

                &.privacy
                    border-left 1px solid #a9a9a9
                    border-right 1px solid #a9a9a9

            .nav-footer-link
                text-decoration none
                text-transform capitalize
                fontsb()
                font-size 14px
                color #a9a9a9

                &:hover
                    text-decoration underline

